<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
     </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.name %></td>
          <td><%= link_to 'Show', location %></td>
          <td><%= link_to 'Edit', edit_location_path(location) %></td>
          <td><%= link_to 'Delete', location_path(location), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%=link_to 'Add new location', new_location_path(region_id: @region.id)%>
